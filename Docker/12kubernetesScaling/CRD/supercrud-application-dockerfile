#supercrud-application.dockerfile
FROM python:3.11-slim

WORKDIR /app
COPY supercrud-application.py /app/
#COPY requirements.txt /app/


# Installazione di curl e wget 
RUN apt-get update && \
    apt-get install -y git build-essential cmake curl wget libcurl4-openssl-dev

#installiamo le dipendenze dirette e senza requirements.txt
RUN pip install --no-cache-dir fastapi uvicorn psycopg2-binary

CMD ["uvicorn", "supercrud-application:app", "--host", "0.0.0.0", "--port", "8000"]

# docker build -t supercrud-application:latest -f supercrud-application-dockerfile .
# minikube image load  supercrud-application
